<h1> My Events </h1>

<h2> Events you're Hosting</h2>
<div>
    <% if @events.blank?%>
        <p> "No events created yet" </p>
    <%else%>
    <ul>
        <% @creator.created_events.each do |event| %>
        <li>
            <strong><%= link_to event.name, event_path(event.creator)%> </strong><br>
            <%= event.date%> - <%= event.location%>
        </li>
        <% end %>
    </ul>
    <% end %>
</div>

<h2> Events you're Attending </h2>
<div>
    <% if current_user.attended_events.blank? %>
        <p> You're not attending any events at the moment </p>
    <% else %>
        <ul>
            <% current_user.attended_events.each do |attended_event| %>
                <li><%= link_to "#{attended_event.name} - #{attended_event.date}", event_path(attended_event) %></li>
            <% end %>
        </ul>
    <% end %>

